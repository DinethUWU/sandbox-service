<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <parent>
    <artifactId>msf4j-service</artifactId>
    <groupId>org.wso2.msf4j</groupId>
    <version>1.0.0</version>
    <relativePath>../pom.xml/pom.xml</relativePath>
  </parent>
  <modelVersion>4.0.0</modelVersion>
  <groupId>com.wso2telco.services.dep</groupId>
  <artifactId>dep-sanbox</artifactId>
  <name>WSO2.Telco Sandbox Microservice</name>
  <version>1.8.0-SNAPSHOT</version>
  <build>
    <plugins>
      <plugin>
        <artifactId>maven-antrun-plugin</artifactId>
        <executions>
          <execution>
            <phase>test</phase>
            <goals>
              <goal>run</goal>
            </goals>
            <configuration>
              <tasks>
                <echo>Copying netty-transports.yml to the target directory</echo>
                <copy />
                <echo>Copying wso2carbon.jks to the target directory</echo>
                <copy />
                <echo>Copying hibernate.cfg.xml to the target directory</echo>
                <copy />
              </tasks>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
  <repositories>
    <repository>
      <releases>
        <updatePolicy>daily</updatePolicy>
        <checksumPolicy>ignore</checksumPolicy>
      </releases>
      <id>wso2telco-nexus</id>
      <name>WSO2Telco internal Repository</name>
      <url>http://maven.wso2telco.com/nexus/content/groups/public/</url>
    </repository>
    <repository>
      <releases>
        <updatePolicy>daily</updatePolicy>
        <checksumPolicy>ignore</checksumPolicy>
      </releases>
      <id>wso2telco.releases</id>
      <name>WSO2 internal Repository</name>
      <url>http://maven.wso2telco.com/nexus/content/repositories/releases/</url>
    </repository>
    <repository>
      <releases>
        <enabled>false</enabled>
      </releases>
      <snapshots>
        <updatePolicy>daily</updatePolicy>
      </snapshots>
      <id>wso2Telco.snapshots</id>
      <name>WSO2Telco Snapshot Repository</name>
      <url>http://maven.wso2telco.com/nexus/content/repositories/snapshots/</url>
    </repository>
  </repositories>
  <properties>
    <microservice.mainClass>com.wso2telco.services.dep.sandbox.service.Application</microservice.mainClass>
    <org.hibernate.version>5.1.0.Final</org.hibernate.version>
    <mysql.version>5.1.6</mysql.version>
  </properties>
</project>

